{
  "title": "MacOSX 60% Arrows",
  "author": "Diego Morales (https://github.com/damg22)",
  "maintainers": ["damg22"],
  "rules": [
    {
      "description": "60% pc keyboard mac-os compatibility: turn 60% fn+arrow keys into shift+arrow keys",
      "manipulators": [
        {
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": []
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": []
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": []
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "application",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": []
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
